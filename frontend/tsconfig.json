{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "fileTransformer.ts"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/containers/Stay.js",
    "src/components/layout/Header.lsx",
    "src/components/modals/MenuModal.tsx",
    "src/components/containers/TopRated.jsx",
    "src/components/containers/Stay.jsx",
    "src/components/containers/Adventures.jsx",
    "src/components/containers/NextWeek.jsx",
    "src/components/containers/Tomorrow.jsx",
    "src/components/containers/Today.jsx",
    "src/components/modals/HelpModal.jsx",
    "src/components/hosthomes/layout/HostHomesHeader.jsx",
    "src/pages/host/services.tsx",
    "src/components/host/layout/HostReady.tsx",
    "src/components/functions/HeaderCard.jsx",
    "src/components/containers/Featured.jsx",
    "src/components/functions/FeaturedCard.jsx",
    "src/components/layout/ExploreHeader.jsx",
    "src/components/modals/OptionModal.ksx",
    "src/pages/stay/1.jsx",
    "src/pages/index.jsx"
  ]
}
