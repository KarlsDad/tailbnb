type Stay {
  id: ID! @id
  title: String @unique
  cost: Int!
  hostType: String
  country: String
  location: String
  ratings: Float @default(value: 0.0)
  img: String
  imglow: String
}

type Adventure {
  id: ID! @id
  title: String @unique
  period: Int!
  cost: Int!
  country: String!
}

type Experience {
  id: ID! @id
  title: String @unique
  cost: Int!
  ratings: Float @default(value: 0.0)
  reviews: Int @default(value: 0)
  country: String!
  img: String
  imglow: String
}